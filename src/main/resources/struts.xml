<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />
    <constant name="struts.custom.i18n.resources" value="global" />

    <!-- <include file="example.xml" /> -->

    <package name="default" namespace="/" extends="struts-default, json-default">

        <default-action-ref name="index" />
        
        <global-results>
            <result name="error">JSP/error.jsp</result>
            <result name="error_interno">JSP/error.jsp</result>
        </global-results>
        
        <global-exception-mappings>
            <exception-mapping result="error_interno" exception="java.lang.Exception"></exception-mapping>
            <exception-mapping result="error_interno" exception="java.sql.SQLException"></exception-mapping>
        </global-exception-mappings>

        <action name="index" class="es.victorpinal.adslwebapp.MainForm">
            <!-- 
            <result type="redirectAction"> 
                <param name="actionName">HelloWorld</param> 
                <param name="namespace">/example</param> 
            </result> 
            -->
            <result name="error_conexion">JSP/datosConexion.jsp</result>
            <result name="login">JSP/login.jsp</result>
            <result>JSP/main.jsp</result>
        </action>
        
        <action name="getProperties">
            <result>JSP/datosConexion.jsp</result>
        </action>

        <action name="index_getResumen" class="es.victorpinal.adslwebapp.MainForm" method="cargaResumen">
            <result name="success" type="json">
                <param name="root">resumen</param>
            </result>
        </action>

        <action name="index_getDatos" class="es.victorpinal.adslwebapp.MainForm" method="cargaDatos">
            <result>datos.jsp</result>
        </action>

    </package>

    <!-- 
    <package name="json" extends="json-default"> 
        <action name="index_resumen" class="es.victorpinal.adslwebapp.MainForm" method="cargaResumen"> 
            <result name="success" type="json"> 
                <param name="root">resumen</param> 
            </result>
        </action> 
    </package>
    -->

</struts>
